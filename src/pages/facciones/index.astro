---
import Layout from "../../layouts/Layout.astro";
import factions from "../../data/factions.json";
import champions from "../../data/champions.json";


// Función auxiliar para generar slugs (URLs amigables)
const createSlug = (name: string) => name.toLowerCase().replace(/\s+/g, '-');
---

<Layout title="Facciones - El Tomo Legendario">
  <main class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    
    <div class="mb-12 text-center">
      <h1 class="text-5xl font-black mb-4 text-raid-gold uppercase tracking-tight drop-shadow-md">
        Guías de Facciones
      </h1>
      <p class="text-gray-300 text-lg max-w-2xl mx-auto">
        Explora todos los campeones de Teleria organizados por sus alianzas. Encuentra estrategias, builds y análisis detallados.
      </p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 mb-12">
      {factions.map((faction) => (
        <a 
          href={`/facciones/${createSlug(faction.name)}`}
          class="group relative overflow-hidden rounded-xl border border-gray-700 hover:border-raid-gold transition-all duration-300 p-6 bg-gray-900/80 flex flex-col items-center justify-center text-center hover:shadow-[0_0_20px_rgba(255,215,0,0.15)]"
        >
          <div class="absolute inset-0 bg-linear-to-t from-raid-gold/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>

          <img 
            src={faction.image || '/favicon.png'} 
            alt={faction.name} 
            class="w-20 h-20 object-contain mb-4 transform group-hover:scale-110 transition-transform duration-300 drop-shadow-lg" 
          />

          <div class="relative z-10">
            <h2 class="text-lg font-black text-white mb-1 group-hover:text-raid-gold transition-colors uppercase tracking-wide">
              {faction.name}
            </h2>
            <div class="text-xs text-gray-500 pt-2 font-medium">
              <span class="group-hover:text-white transition-colors">Ver Campeones →</span>
            </div>
          </div>
        </a>
      ))}
    </div>

    <section class="bg-gray-900/50 p-8 rounded-2xl border border-gray-800 backdrop-blur-sm">
      <h2 class="text-2xl font-bold text-white mb-6 border-b border-gray-700 pb-2">Estadísticas del Tomo</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="text-center p-4 bg-gray-800/50 rounded-lg border border-gray-700">
          <p class="text-gray-400 text-xs uppercase mb-2 font-bold tracking-wider">Facciones</p>
          <p class="text-raid-gold font-black text-3xl">{factions.length}</p>
        </div>
        <div class="text-center p-4 bg-gray-800/50 rounded-lg border border-gray-700">
          <p class="text-gray-400 text-xs uppercase mb-2 font-bold tracking-wider">Campeones</p>
          <p class="text-purple-400 font-black text-3xl">{champions.length}</p>
        </div>
        <div class="text-center p-4 bg-gray-800/50 rounded-lg border border-gray-700">
          <p class="text-gray-400 text-xs uppercase mb-2 font-bold tracking-wider">Rareza Máx</p>
          <p class="text-orange-500 font-black text-3xl">Mítico</p>
        </div>
        <div class="text-center p-4 bg-gray-800/50 rounded-lg border border-gray-700">
          <p class="text-gray-400 text-xs uppercase mb-2 font-bold tracking-wider">Afinidades</p>
          <p class="text-blue-400 font-black text-3xl">4</p>
        </div>
      </div>
    </section>
  </main>
</Layout>

